<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.soccer.user.dao.UserMapper">
 	<select id="selectUserByEmail" resultType="com.soccer.user.domain.User">
 		SELECT
 			`id`
			,`email`
			,`password`
			,`name`
			,`loginType`
			,`role`
			,`kakaoKey`
			,`profileImagePath`
			,`phoneNumber`
			,`birth`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`email` = #{loginEmail}
 	</select>
 	
 	<select id="selectUserById" parameterType="int" resultType="com.soccer.user.domain.User">
 	 	SELECT
 			`id`
			,`email`
			,`password`
			,`name`
			,`loginType`
			,`role`
			,`kakaoKey`
			,`profileImagePath`
			,`phoneNumber`
			,`birth`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`id` = #{id}
 	</select>
 	
 	<select id="selectUserByLoginEmailPassword" parameterType="map" resultType="com.soccer.user.domain.User">
 	 	SELECT
 			`id`
			,`email`
			,`password`
			,`name`
			,`loginType`
			,`role`
			,`kakaoKey`
			,`profileImagePath`
			,`phoneNumber`
			,`birth`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`email` = #{loginEmail}
		AND
			`password` = #{password}
 	</select>
 	
 	<select id="selectCertificationByEmailNum" parameterType="map" resultType="com.soccer.user.domain.Certification">
 	 	SELECT
 	 		`id`
			,`email`
			,`randNumber`
		FROM
			`certification`
		WHERE
			`email` = #{loginEmail}
		AND 
			`randNumber` = #{code}
 	</select>
 	
 	<select id="selectUserByLoginEmailName" parameterType="map" resultType="com.soccer.user.domain.User">
 		SELECT
 			`id`
			,`email`
			,`password`
			,`name`
			,`loginType`
			,`role`
			,`kakaoKey`
			,`profileImagePath`
			,`phoneNumber`
			,`birth`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`email` = #{loginEmail}
		AND
			`name` = #{name}
 			
 	</select>
 	
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO `user`
 		(
 			`email`
			,`password`
			,`name`
			,`loginType`
			,`role`
			,`phoneNumber`
			,`birth`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{loginEmail}
 			,#{password}
 			,#{name}
 			,#{loginType}
 			,#{role}
 			,#{phoneNumber}
 			,#{birth}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<insert id="insertCertification" parameterType="map">
 		INSERT INTO `certification`
 		(
			`email`
			,`randNumber`
 		)
 		VALUES
 		(
 			#{loginEmail}
 			,#{code}
 		)
 	</insert>
 	
 	<update id="updateUserByNameLoginEmail" parameterType="map">
 		UPDATE `user`
 		SET `password` = #{hashedCode}
 	</update>
 	
 	
 	
 	<delete id="deleteByEmail" parameterType="String">
 	 	DELETE FROM `certification`
 	 	WHERE 	`email` = #{loginEmail}
 	</delete>
 	
 </mapper>